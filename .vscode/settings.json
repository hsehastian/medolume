{
    // nunjucks settings
    "html.suggest.html5": true,
    "emmet.includeLanguages": {
        "njk": "html",
        "nunjucks": "html"
    },
    "files.associations": {
        "*.njk": "njk"
    },
    // editor settings
    "editor.formatOnSave": true,
    "editor.trimAutoWhitespace": true,
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    // deno setting
    "deno.enable": true
}